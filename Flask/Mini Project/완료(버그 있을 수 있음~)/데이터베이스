-- 데이터베이스 생성
create database minidb;

-- 데이터 베이스 선택
use minidb;

-- 테이블 만들기
create table board_table(
board_idx int not null auto_increment,
board_name varchar(100) not null,
constraint board_pk primary key(board_idx),
constraint board_uq unique(board_name)
);

create table user_table(
user_idx int not null auto_increment,
user_name char(10) not null,
user_id char(20) not null,
user_pw char(20) not null,
constraint user_pk primary key(user_idx),
constraint user_uq unique(user_id)
);

create table content_table(
content_idx int not null auto_increment,
content_subject varchar(500) not null,
content_text varchar(500) not null,
content_date date not null,
content_file varchar(500),
content_writer_idx int not null,
content_board_idx int not null,
content_status int not null,
constraint content_pk primary key(content_idx),
constraint content_uq unique(content_file),
constraint content_fk1 foreign key(content_writer_idx)
references user_table(user_idx),
constraint content_fk2 foreign key(content_board_idx)
references board_table(board_idx)
);


desc board_table;
desc user_table;
desc content_table;


insert into board_table (board_name) values ('공지사항');
insert into board_table (board_name) values ('자유게시판');
insert into board_table (board_name) values ('스포츠게시판');
insert into board_table (board_name) values ('연예게시판');
insert into board_table (board_name) values ('뉴스게시판');
insert into board_table (board_name) values ('쇼핑게시판');

commit;












